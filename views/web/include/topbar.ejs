<header id="header">
    <div class="container-flex">
        <div class="cell cell-200">
            <a href="/"><span class="logo"><img src="/public/img/logo_x2.png" alt="WangYi"/></span></a>
        </div>
        <div class="cell cell-flex">
            <div class="header-nav-wrap clearfix">
                <nav>
                    <ul class="header-nav">
                        <li><a href="/">Home</a></li>
                        <% topnav.forEach(function (tag) { %>
                        <li><a href="/tag/<%= tag.id %>" title="<%= tag.intro %>"><%= tag.name %></a></li>
                        <% }); %>
                        <li><a href="/cms/#about-us">About</a></li>
                    </ul>
                </nav>
                <div class="share">
                    <a class="weibo" href="http://weibo.com/weixiaobeijing" target="_blank"><i class="fa fa-weibo"></i></a>
                    <a class="wechat" href="http://weibo.com/weixiaobeijing" target="_blank">
                        <i class="fa fa-wechat"></i>
                        <div class="qrcode">
                            <img src="/public/img/qrcode.png" alt="Wangyi"/>
                        </div>
                    </a>
                </div>
                <nav>
                    <ul class="header-nav-right">
                        <li><a href="/cms/#news">news</a></li>
                        <li><a href="/cms/#contact">contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="mobile">
        <div class="clearfix">
            <a href="/"><span class="mo-logo"><img src="/public/img/logo_x2.png" alt="WangYi"/></span></a>
            <a href="" class="mo-nav-toggle"><i class="fa fa-bars"></i></a>
        </div>
        <nav class="mo-head-nav">
            <ul>
                <li><a class="nav-item-a" href="/">Home</a></li>
                <% topnav.forEach(function (tag) { %>
                <li><a class="nav-item-a" href="/tag/<%= tag.id %>" title="<%= tag.intro %>"><%= tag.name %></a></li>
                <% }); %>
                <li><a class="nav-item-a" href="/cms/#about-us">About</a></li>
                <li><a class="nav-item-a" href="/cms/#news">news</a></li>
                <li><a class="nav-item-a" href="/cms/#contact">contact</a></li>
                <li>
                    <div class="mo-share">
                        <a class="weibo" href="http://weibo.com/weixiaobeijing" target="_blank"><i class="fa fa-weibo"></i></a>
                        <a class="wechat" href="http://weibo.com/weixiaobeijing" target="_blank">
                            <i class="fa fa-wechat"></i>
                            <div class="qrcode">
                                <img src="/public/img/qrcode.png" alt="Wangyi"/>
                            </div>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
    </div>
</header>